<div class="track track_playing">
	<%if (track.imgurl == null){ %>
	<img src="/images/quaver3.png"/>
	<%}else {%>
	<img src="<%=track.imgurl%>"/>
	<%}%>

	<p><%=track.name%></p>
	<audio src="<%=track.url%>" type="audio/mpeg" controls="controls"></audio>
	
	<form method="post" action="http://10.1.2.1/tracks/<%=track.name%>?_method=delete">
	    <button type="submit" onClick="return confirm('Delete: <%=track.name%>. Are you sure? ');">
	      Delete track
	    </button>
  	</form>
</div>
